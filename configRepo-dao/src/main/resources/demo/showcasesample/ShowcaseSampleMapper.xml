<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.framework.demo.dao.showcaseSample.ShowcaseSampleMapper">

    <select id="findByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from `showcase_sample` where name = #{name,jdbcType=VARCHAR}

    </select>
    <select id="findBySearchable" parameterType="cn.vansky.framework.core.orm.mybatis.plugin.search.vo.Searchable" resultMap="BaseResultMap">
        select * from `showcase_sample` where 1=1
    </select>

    <select id="findBySort" parameterType="cn.vansky.framework.core.orm.mybatis.plugin.search.vo.Sort" resultMap="BaseResultMap">
        select * from `showcase_sample` where 1=1
    </select>
    <select id="countBySearchable" parameterType="cn.vansky.framework.core.orm.mybatis.plugin.search.vo.Searchable"  resultType="java.lang.Long">
        select count(*) from `showcase_sample` where 1=1
    </select>
</mapper>